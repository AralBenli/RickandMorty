<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/background_edge_circle"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="8dp"
    android:backgroundTint="@color/air_pink">

    <RelativeLayout
        android:id="@+id/buttonView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/circle_background"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/carouselName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/carouselImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rick_sanchez">

        </ImageView>
    </RelativeLayout>

    <TextView
        android:id="@+id/carouselName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/carousel_txt_edges"
        android:gravity="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/air_blue"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonView"
        tools:text="Rick Sanchez"/>


</androidx.constraintlayout.widget.ConstraintLayout>